@* HOMEPAGE INDEX *@
@model IEnumerable<PASSIFY.Models.Activity>

@{
    ViewData["Title"] = "Home Page";
    var imgWidth = "25px";

}

<div class="text-center p-3">
    <h1 class="display-4">Welcome <span class="text-secondary">@User.Identity.Name</span> to your Passify Dashboard</h1>
</div>

<section class="d-flex justify-content-end p-1" id="add-section">
    <div class="d-flex justify-content-between">
        @* Add event *@
        <a asp-controller="Activities" asp-action="Create" class="m-2 link-dark text-decoration-none">
            <img src="assets/svg/event.svg" width="@imgWidth" alt="Add Event Icon">
            <span style="">Add event</span>
        </a>
        @* Add Category *@
        <a asp-controller="Categories" asp-action="Create" class="m-2 link-dark text-decoration-none">
            <img src="assets/svg/cat_tag.svg" width="@imgWidth" alt="Add Category Icon"/>
            <span>Add category</span>
        </a>
        <a asp-controller="Organizers" asp-action="Create" class="m-2 link-dark text-decoration-none">
            <img src="assets/svg/organizer.svg" width="@imgWidth" alt="Add Organizer Icon"/>
            <span>Add organizer</span>       
        </a>
    </div>
</section>


@*TODO: convert table to div layout*@
<section class="p-2">
    <table class="table table-striped table-hover">
        <thead class="bg-body-secondary">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FormFile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventStart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventEnd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Organizer)
            </th>
        </tr>
        </thead>
        
        <tbody>
            @foreach (var item in Model)
            {
                <tr data-title="@item.Title" data-id="@item.ActivityId" class="pe-auto align-middle">
                    <td class="">
                        @if(item.FormFile == null)
                        {
                            <img src="@Url.Content("~/assets/photos/placeholder.jpg")" alt="" class="img-thumb">
                        }
                        else
                        {
                            <img src="@Url.Content("~/assets/photos/" + item.ImageName)" alt="" class="img-thumb">

                        }

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EventStart)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EventEnd)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Created)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Organizer.Name)
                    </td>

                </tr>
            }
        </tbody>
    </table>

</section>