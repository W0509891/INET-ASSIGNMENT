@model PASSIFY.Models.Category

@{
    ViewData["Title"] = "Details";
    var imgWidth = 30;
}

<h1>Details</h1>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
    </dl>
</div>
<div class="w-x d-flex justify-content-sm-between align-items-center">
    <a asp-action="Edit" asp-route-id="@Model?.CategoryId"><img src="/assets/svg/edit.svg" width=@string.Concat(imgWidth, "px") /></a>
    <a asp-action="Index" "><img src="~/assets/svg/back.svg" width=@string.Concat(imgWidth + 20, "px") alt="Back"></a>
</div>
